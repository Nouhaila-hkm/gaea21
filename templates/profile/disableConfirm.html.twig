{% extends 'base.html.twig' %}

{% block title %}Confirmation de désinscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('form') }}
    {{ encore_entry_link_tags('desactivateAccountForm') }}
{% endblock %}

{% block body %}
