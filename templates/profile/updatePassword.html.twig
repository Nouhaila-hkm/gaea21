{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('form') }}
    {{ encore_entry_link_tags('updatePasswordForm') }}
{% endblock %}

{% block body %}
    {% include "/components/_topbar.html.twig" %}
    <div class="imgHeader">
        <img src="{{ asset('imagesgaea21/feuilles_vertes.png') }}" alt="Feuilles vertes" width="100%" height="440"/>
        <h1 class="textHeader">Changement du mot de passe</h1>
    </div>

    <div id="updatePasswordForm" data-email="{{ app.user.email }}"></div>

    <div class="formRegistration">
    <div id="registrationForm"></div>
        <a class="returnHomepageLink" href="{{ path('userShow')}}">Retour au profil</a>
    </div>

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('form') }}
        {{ encore_entry_script_tags('updatePasswordForm') }}
    {% endblock %}
{% endblock %}
